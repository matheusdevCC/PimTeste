@model PimTeste.Models.UsuarioLogin



<html>
<head>
   
    <title>Desenvoltech</title>
</head>

<body>
    <link rel="stylesheet" href="~/css/site.css">
    

    <main class="conteudo-principal">
        <div class="titulo">
            <h1 class="tech">Desenvoltech</h1>

        </div>
        <div class="forms-img">
            <form action="@Url.Action("EntrarTeste", "Login")" method="post" class="formulario">

                <fieldset class="form-content">
                    <legend>Faça o login com sua conta</legend>
                    <label for="email" class="label">E-mail</label>
                    <input type="email" asp-for="Email" name="Email" id="email" required placeholder="Digite seu email" class="campo-entrada">
                    @Html.ValidationMessageFor(x => x.Email)

                    <label for="senha" class="label">Senha</label>
                    <input type="password" asp-for="senha" name="senha" id="senha" required placeholder="Digite sua senha" class="campo-entrada">
                    @Html.ValidationMessageFor(x => x.senha)

                    <div class="btns-form">
                        <div class="radio">
                            <input type="radio" id="radio">
                            <label for="radio">Lembrar a senha</label>
                        </div>

                        <a href="#">Esqueceu sua senha?</a>
                    </div>

                    <button asp-controller="Login" asp-action="EntrarTeste" method="post" class="btn-form">Entrar</button>

                </fieldset>
            </form>
            <div class="logo">
                <img src="~/css/login.png" alt="">
            </div>
        </div>

    </main>

</body>
</html>